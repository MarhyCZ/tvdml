{
  "name": "tvdml",
  "version": "4.0.0",
  "description": "Small library for creating declarative apps for tvOS with TVML and TVJS",
  "main": "dist/tvdml.js",
  "engine-strict": true,
  "engines": {
    "node": "^6.0.0",
    "yarn": ">=1.0.0"
  },
  "scripts": {
    "install-deps": "npm run yarn:install && npm run yarn:install-deps",
    "yarn:install": "npm i yarn@$npm_package_engines_yarn",
    "yarn:install-deps": "yarn",
    "build": "webpack --progress",
    "watch": "webpack --watch --progress",
    "dist": "NODE_ENV=production webpack --progress",
    "lint": "eslint webpack.config.js src test",
    "test": "NODE_ENV=test mocha --reporter spec --timeout 4000 --require babel-register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a-ignatov-parc/tvdml.git"
  },
  "keywords": [
    "virtual",
    "apple",
    "tvos",
    "tvjs",
    "tvml",
    "dom",
    "tv"
  ],
  "author": "Anton Ignatov <abietis@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/a-ignatov-parc/tvdml/issues"
  },
  "homepage": "https://github.com/a-ignatov-parc/tvdml#readme",
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^7.1.2",
    "babel-minify-webpack-plugin": "^0.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-register": "^6.26.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "mocha": "^3.1.2",
    "mocha-junit-reporter": "^1.15.0",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "@a-ignatov-parc/virtual-dom": "^2.2.0"
  },
  "files": [
    "dist"
  ]
}
