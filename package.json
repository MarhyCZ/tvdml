{
  "name": "tvdml",
  "version": "2.0.4",
  "description": "Small library for creating declarative apps for tvOS with TVML and TVJS",
  "main": "dist/tvdml.js",
  "module": "src/index.js",
  "engine-strict": true,
  "engines": {
    "node": "^6.0.0",
    "yarn": ">=1.0.0"
  },
  "scripts": {
    "install-deps": "npm run yarn:install && npm run yarn:install-deps",
    "yarn:install": "npm i yarn@$npm_package_engines_yarn",
    "yarn:install-deps": "yarn",
    "build": "webpack --progress",
    "watch": "webpack --watch --progress",
    "dist": "NODE_ENV=production webpack --progress",
    "lint": "eslint webpack.config.js src",
    "test": "mocha --reporter spec --timeout 4000 --compilers js:babel-register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a-ignatov-parc/tvdml.git"
  },
  "keywords": [
    "virtual",
    "apple",
    "tvos",
    "tvjs",
    "tvml",
    "dom",
    "tv"
  ],
  "author": "Anton Ignatov <abietis@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/a-ignatov-parc/tvdml/issues"
  },
  "homepage": "https://github.com/a-ignatov-parc/tvdml#readme",
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "mocha": "^3.1.2",
    "mocha-junit-reporter": "^1.15.0",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "es6-promise": "^4.0.5",
    "virtual-dom": "a-ignatov-parc/virtual-dom#v2.1.1-tvml.3"
  },
  "files": [
    "dist"
  ]
}
